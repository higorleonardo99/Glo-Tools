<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="23dp"
	android:paddingRight="23dp">

	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Name Project"
		android:layout_marginTop="10dp"
		android:id="@+id/dialog_create_project_layout_name_project">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/dialog_create_project_edt_name_project"/>

	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Name Package"
		android:layout_marginTop="10dp"
		android:id="@+id/dialog_create_project_layout_name_package">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/dialog_create_project_edt_name_package"/>

	</com.google.android.material.textfield.TextInputLayout>
    
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="end">
        
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_create_project_btn_androidx"
            android:text="AndroidX"
            android:checked="true"/>
            
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_create_project_btn_appcompat"
            android:text="AppCompat"
            android:checked="false"/>
        
    </RadioGroup>

</LinearLayout>

